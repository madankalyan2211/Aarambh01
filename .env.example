# Environment Variables Template for Aarambh LMS
# Copy this file to .env and fill in your actual values

# ===========================================
# Email Service Configuration (for OTP)
# ===========================================

VITE_EMAIL_SERVICE_PROVIDER=gmail

# Gmail Configuration (Using App Password)
# How to get App Password:
# 1. Go to https://myaccount.google.com/apppasswords
# 2. Sign in to your Google Account
# 3. Select "Mail" and your device
# 4. Copy the 16-character password (remove spaces)
VITE_GMAIL_USER=
VITE_GMAIL_APP_PASSWORD=
VITE_GMAIL_FROM_NAME=Aarambh LMS

# SMTP Configuration
VITE_SMTP_HOST=smtp.gmail.com
VITE_SMTP_PORT=587
VITE_SMTP_SECURE=false

# Alternative: SendGrid
VITE_SENDGRID_API_KEY=
VITE_SENDGRID_FROM_EMAIL=
VITE_SENDGRID_FROM_NAME=

# Alternative: AWS SES
VITE_AWS_SES_REGION=
VITE_AWS_SES_ACCESS_KEY_ID=
VITE_AWS_SES_SECRET_ACCESS_KEY=
VITE_AWS_SES_FROM_EMAIL=

# Alternative: Resend
VITE_RESEND_API_KEY=
VITE_RESEND_FROM_EMAIL=

# ===========================================
# OTP Configuration
# ===========================================

VITE_OTP_EXPIRY_MINUTES=10
VITE_OTP_LENGTH=6
VITE_OTP_MAX_RESEND_ATTEMPTS=3
VITE_OTP_RESEND_COOLDOWN=60

# ===========================================
# Backend API Configuration
# ===========================================

VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000

# ===========================================
# Application Configuration
# ===========================================

VITE_APP_ENV=development
VITE_DEBUG_MODE=true
VITE_APP_URL=http://localhost:5173

# ===========================================
# Security Configuration
# ===========================================

VITE_JWT_SECRET=
VITE_SESSION_TIMEOUT=30

# ===========================================
# Third-Party Integrations
# ===========================================

VITE_GOOGLE_CLIENT_ID=
VITE_GOOGLE_CLIENT_SECRET=
